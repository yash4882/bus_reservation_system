
<table class="table caption-top">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Contact</th>
      <th scope="col">Role_id</th>
      <th scope="col">Age</th>
      <th scope="col">Gender</th>
      <th scope="col">Status</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th scope="row"><%=format_name(@user.name)%></th>
        <td><%=@user.email %></td>
        <td><%=@user.contact%></td>
        <td><%=@user.role_id %></td>
        <td><%=@user.age%></td>
        <td><%=@user.gender %></td>
        <td><%=@user.status%></td>
        <td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Status</button></td>

      </tr>
  </tbody>
</table>

<div class="btn-group" role="group" aria-label="Basic outlined example">
  <button type="button" class="btn btn-outline-primary"><%= link_to "Edit", edit_user_path %></button>
  <button type="button" class="btn btn-outline-primary"><%= link_to "Destroy", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></button>
  <button type="button" class="btn btn-outline-primary"><%= link_to "Back", :back %></button>
</div>



<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" style="z-index: 99999999999;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Change Status</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% User::STATUSES.each do |status| %>
          <%= link_to change_status_user_path(@user, status: status), turbo_method: :patch do %>
            <button class="btn btn-primary"><%= status %></button>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


