
<table class="table caption-top">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Contact</th>
      <th scope="col">Role_id</th>
      <th scope="col">Age</th>
      <th scope="col">Gender</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th scope="row"><%=@user.name%></th>
        <td><%=@user.email %></td>
        <td><%=@user.contact%></td>
        <td><%=@user.role_id %></td>
        <td><%=@user.age%></td>
        <td><%=@user.gender %></td>
      </tr>
  </tbody>
</table>

<div class="btn-group" role="group" aria-label="Basic outlined example">
  <button type="button" class="btn btn-outline-primary"><%= link_to "Edit", edit_user_path %></button>
  <button type="button" class="btn btn-outline-primary"><%= link_to "Destroy", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></button>
  <button type="button" class="btn btn-outline-primary"><%= link_to "Back", :back %></button>
</div>