<%= render "layouts/flash" %>
<div class="container">
  <div class="card-body p-3 text-center ">
    <center>
      <div class="p-5 bg-light w-50 shadow-lg">
        <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
        <p class="text-dark-50 mb-5">Please enter your login and password!</p>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
          <div class="form-outline form-white mb-4">
            <%= form.label :email, class: "form-label"%>
            <%= form.email_field :email, class: "form-control" %>
          </div>

          <div class="form-outline form-white mb-4">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
          </div>

          <%= form.submit :Submit, class: "btn btn-outline-light btn-lg px-5 mb-5" %>

          <p class="mb-0">Don't have an account? <%= render "devise/shared/links" %></p>
      <% end %>
      </div>
    </center>
  </div>
</div>


