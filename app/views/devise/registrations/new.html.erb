<center>
  <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
  <p class="text-white-50 mb-5">Please Register Yourself Here!</p>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <div class="form-outline form-white mb-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name,  class: "form-control w-50" %>
    <% @user.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-outline form-white mb-4">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email ,class: "form-control w-50" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-outline form-white mb-4">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control w-50" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-outline form-white mb-4">
    <%= form.label :contact, class: "form-label" %>
    <%= form.text_field :contact, class: "form-control w-50" %>
    <% @user.errors.full_messages_for(:contact).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-outline form-white mb-4">
    <%= form.label :age, class: "form-label" %>
    <%= form.number_field :age, class: "form-control w-50" %>
    <% @user.errors.full_messages_for(:age).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-outline form-white mb-4">
    <%= form.label :gender, class: :"form-label" %><br>
    <%= form.radio_button :gender, 'Male' %> 
    <%= form.label :gender, 'Male'%>
    <%= form.radio_button :gender, 'Female' %>
    <%= form.label :gender, 'Female' %>
    <% @user.errors.full_messages_for(:gender).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-outline form-white mb-4">
    <%= form.label :role_id, class: "form-label" %>
    <%= form.select(:role_id, Role.where.not(id:1).pluck(:name, :id), { include_blank: true },{class: 'form-select w-50'})%>
    <% @user.errors.full_messages_for(:role_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.submit :Submit, class: :"btn btn-primary btn-sm" %>
  </div>

  <div>
  <p class="mb-0">Already have an account?<%= render "devise/shared/links" %></p>
  </div>
  <% end %>
  <%= link_to "Back", :back %>
</center>