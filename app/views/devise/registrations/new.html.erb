<div class="container">
  <div class="card-body p-3 text-center ">
    <center>
      <div class="p-5 bg-ligh w-50 shadow-lg">
        <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
        <p class="text-dark-50 mb-5">Please Register Yourself Here!</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
        <div class="field form-white mb-4">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name,  class: "form-control w-100" %>
          <% @user.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="field form-white mb-4">
          <%= form.label :username, class: "form-label" %>
          <%= form.text_field :username,class: "form-control w-100" %>
          <% @user.errors.full_messages_for(:username).each do |message| %>
            <div><%= message %></div>
          <% end %>

        </div>

        <div class="row">
          <div class="col-6">
            <div class="form-outline form-white mb-4">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email ,class: "form-control w-100" %>
              <% @user.errors.full_messages_for(:email).each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          </div>
          <div class="col-6">
            <div class="form-outline form-white mb-4">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, class: "form-control w-100" %>
              <% @user.errors.full_messages_for(:password).each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-outline form-white mb-4">
          <%= form.label :contact, class: "form-label" %>
          <%= form.text_field :contact, class: "form-control w-100" %>
          <% @user.errors.full_messages_for(:contact).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

         <div class="row">
          <div class="col-6">
            <div class="form-outline form-white mb-4">
              <%= form.label :age, class: "form-label" %>
              <%= form.number_field :age, class: "form-control w-100" %>
              <% @user.errors.full_messages_for(:age).each do |message| %>
                <div><%= message %></div>
              <% end %>
            </div>
          </div>
            <div class="col-6">
              <div class="form-outline form-white mb-4">
                <%= form.label :role_id, class: "form-label" %>
                <%= form.select(:role_id, Role.where.not(id:1).pluck(:name, :id), { include_blank: true },{class: 'form-select w-100'})%>
                <% @user.errors.full_messages_for(:role_id).each do |message| %>
                  <div><%= message %></div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="form-outline form-white mb-3">
            <%= form.label :gender, class: :"form-label pe-3" %>
            <%= form.radio_button :gender, 'Male' %> 
            <%= form.label :gender, 'Male'%>
            <%= form.radio_button :gender, 'Female' %>
            <%= form.label :gender, 'Female' %>
            <% @user.errors.full_messages_for(:gender).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

        <%= form.submit :Submit, class: :"btn btn-primary btn-sm mb-5" %>

        <div>
        <p class="mb-0">Already have an account?<%= render "devise/shared/links" %></p>
        </div>
        <% end %>
        <%= link_to "Back", :back %>
        </div>
      </div>
    </center>
  </div>
</div>