<%= render "layouts/flash" %>
<center><h4 class="p-3">Data of Bus No - <%=@bus.bus_number%></h4></center>
<table class="table caption-top">
  <thead>
    <tr>
      <th scope="col">Bus Id</th>
      <th scope="col">Manager id</th>
      <th scope="col">Bus Number</th>
      <th scope="col">Source</th>
      <th scope="col">Destination</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Bus Type</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <th scope="row"><%=@bus.id%></th>
        <td><%=@bus.manager_id%></td>
        <td><%=@bus.bus_number%></td>
        <td><%=@bus.source%></td>
        <td><%=@bus.destination%></td>
        <td><%=@bus.date%></td>
        <td><%=@bus.time%></td>
        <td><%=@bus.bus_type%></td>
      </tr>
  </tbody>
</table>

<div class="btn-group" role="group" aria-label="Basic outlined example">
  <button type="button" class="btn btn-outline-primary"><%= link_to "Edit", edit_bus_path(@bus.id)%></button>
  <button type="button" class="btn btn-outline-primary"><%= link_to "Destroy", bus_path(@bus.id), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }%></button>
  <button type="button" class="btn btn-outline-primary"><%= link_to "Back", buses_path %></button>
</div>
