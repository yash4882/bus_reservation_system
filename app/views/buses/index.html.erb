    <div class="collapse navbar-collapse" id="navbarText">
      <span class="navbar-text">
        
        <% if  current_user.present?%>
          <%= link_to "Home", root_path, class:"btn btn-primary btn-sm" %>
          <%= link_to "Buses", buses_path, class:"btn btn-primary btn-sm" %>
